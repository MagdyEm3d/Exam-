<Application x:Class="Holistic_Exam.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Holistic_Exam"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="border" TargetType="Button">
            <Setter Property="Background" Value="red"></Setter>
            <Setter Property="FontSize" Value="22"></Setter>
            <Setter  Property="FontFamily" Value="Arial Black"></Setter>
            <Setter Property="Margin" Value="30"></Setter>
            <Setter Property="Foreground" Value="Aqua"></Setter>
            <Setter Property="BorderBrush" Value="Black"></Setter>
        </Style>
    </Application.Resources>
</Application>
